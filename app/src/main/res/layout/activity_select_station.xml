<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_station"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ru.drsk.progserega.stationapp.SelectStationActivity"
    android:layout_width="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:weightSum="1">

        <TextView
            android:textSize="32sp"
            android:text="@string/select_sp_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_sp_text"
            android:gravity="center"
            />

        <Spinner
            android:textSize="32sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_selector"
            android:spinnerMode="dialog"
            android:layout_weight="1"
            android:dropDownWidth="match_parent" />

        <TextView
            android:textSize="32sp"
            android:text="@string/select_res_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_res_text"
            android:gravity="center"
            />

        <Spinner
            android:textSize="32sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/res_selector"
            android:spinnerMode="dialog"
            android:dropDownWidth="match_parent" />

        <TextView
            android:textSize="32sp"
            android:text="@string/select_station_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_station_text"
            android:gravity="center"
            />

        <Spinner
            android:textSize="32sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/station_selector"
            android:spinnerMode="dialog"
            android:dropDownWidth="match_parent" />

    </LinearLayout>
</RelativeLayout>
